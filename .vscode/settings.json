{
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "editor.insertSpaces": true,
  "AllAutocomplete.showCurrentDocument": false,
  "AllAutocomplete.cycleOpenDocumentsOnLaunch": true,
  "editor.mouseWheelScrollSensitivity": 0.5,
  "ruby.codeCompletion": "solargraph",
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "**/*.rb",
        "cmd": "ruby ${workspaceRoot}/tests/test_all.rb"
      }
    ]
  },
  "triggerTaskOnSave.tasks": {
    "Test": ["**/*.rb"],
    "Sass Compile": ["**/*.scss"],
    "Format ERB": ["**/*.erb"]
  },
  "triggerTaskOnSave.restart": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    ".gitignore":true,
    ".env.*":true,
    "Gemfile*":true,
    "Rakefile":true,
    "config.ru":true,
    ".hanamirc":true,
    "logs":true
  },
  "emmet.includeLanguages": {"erb": "html"}
}
