{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [{
      "label": "Sass Compile",
      "type": "shell",
      "command": "sass apps/web/assets/styles.scss apps/web/assets/styles.css",
      "group": "build"
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "sass dist/styles.scss dist/styles.css && ruby main.rb",
      "presentation": {
        "panel": "dedicated",
        "focus": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "bundle",      
      "args": [
        "exec",
        "rake",
        "test"
      ],
      "presentation": {
        "panel": "dedicated"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}